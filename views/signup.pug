extends base

block content
  div(style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f5f5f5;")
    div(style="background-color: white; padding: 40px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);")
      h2(style="text-align: center; color: #333333; margin-bottom: 30px;") SIGN UP
      div(style="margin-bottom: 20px;")
        input(type="text", placeholder="Full Name", style="width: 100%; padding: 10px; border: 1px solid #cccccc; border-radius: 4px; outline: none;")
      div(style="margin-bottom: 20px;")
        input(type="email", placeholder="Email address", style="width: 100%; padding: 10px; border: 1px solid #cccccc; border-radius: 4px; outline: none;")
      div(style="margin-bottom: 20px;")
        input(type="password", placeholder="Password", style="width: 100%; padding: 10px; border: 1px solid #cccccc; border-radius: 4px; outline: none;")
      div(style="margin-bottom: 20px;")
        input(type="password", placeholder="Confirm Password", style="width: 100%; padding: 10px; border: 1px solid #cccccc; border-radius: 4px; outline: none;")
      button(style="width: 100%; padding: 10px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;") SIGN UP